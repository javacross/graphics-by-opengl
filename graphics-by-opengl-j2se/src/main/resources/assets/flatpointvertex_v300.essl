#version 300 es
 /**
 * Vertex shader for points
 */

precision highp float;

//Put array declaration after name for GLSL compatibility
uniform mat4 uMVMatrix;
uniform mat4 uProjectionMatrix;

in vec4 aVertex; //Contains xyz + size
in vec4 aColor;

out vec4 color;

/**
 * Used for objects that uses only position - processed as points
 */
void main() {
    vec4 pos = vec4(aVertex.xyz, 1.0) * uMVMatrix;
    gl_Position = pos * uProjectionMatrix;
    gl_PointSize = 5;
    color = aColor;
}
