#version 300 es
/* 
 *
 * Fragment shader for glTF asset
 * @author Richard Sahlin
 */
precision mediump float;

uniform lowp sampler2D uTexture;      //The texture sampler

in vec2 vTexCoord;
in vec4 vDiffuseColor;

out vec4 fragColor;

void main()
{
    fragColor = texture(uTexture, vTexCoord) * vDiffuseColor;
}
