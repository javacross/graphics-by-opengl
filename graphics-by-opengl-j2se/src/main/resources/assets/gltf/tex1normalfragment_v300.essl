#version 300 es
#line 1
/* 
 *
 * Fragment shader for glTF asset
 * @author Richard Sahlin
 */
precision highp float;

void main() {
    vec3[2] diffuseSpecular = calculateFresnelDiffuse(
            normalize(vec3(texture(uTextureNormal, vTexNormal) * 2.0 - 1.0) * mTangentLight));
    outputPixel(vec4(diffuseSpecular[0] * texture(uTexture0, vTexCoord0).rgb + diffuseSpecular[1], 1.0));
}
