/* 
 *
 * Fragment shader for glTF asset - using 1 texture, normal map and metallic roughness map
 * @author Richard Sahlin
 */
precision highp float;

void main() {
    outputPixel(texture(uTexture0, vTexCoord0) * 
        vec4(calculateFresnelDiffuse(
            vec3(texture(uTextureNormal, vTexNormal) * 2.0 - 1.0) * mTangentLight,
            vec3(texture(uTextureMR, vTexMR))), 1.0));
}
